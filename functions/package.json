{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "FUNCTIONS_EMULATOR=true firebase emulators:start --only functions",
    "set-webhook": "node webhook-setup.js",
    "test": "jest",
    "lint": "eslint .",
    "pipeline:serve": "node pipeline/server.js",
    "pipeline:train": "node pipeline/jobs/trainAndPublish.js",
    "pipeline:experiments": "node pipeline/jobs/experimentSummary.js",
    "pipeline:indexes": "node -e \"require('./pipeline/indexes').createIndexes().then(() => process.exit(0))\"",
    "pipeline:fairness-report": "node pipeline/jobs/fairnessReport.js",
    "pipeline:feedback-report": "node pipeline/jobs/feedbackLoopReport.js",
    "pipeline:drift-report": "node pipeline/jobs/driftReport.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/tasks": "^6.2.0",
    "agent-base": "^6.0.2",
    "axios": "^1.11.0",
    "body-parser": "^2.2.0",
    "chrono-node": "^2.8.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^6.4.0",
    "gaxios": "^5.1.3",
    "gcp-metadata": "^5.3.0",
    "https-proxy-agent": "^5.0.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.17.0",
    "node-cron": "^4.2.1",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^5.12.0",
    "prom-client": "^15.1.3",
    "semver": "^7.6.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0"
  },
  "private": true
}
